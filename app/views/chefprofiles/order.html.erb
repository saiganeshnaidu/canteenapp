<h2> All orders </h2>

<% @carts.each do |x| %>
    <% if x.foodstore_id==@chef_pro.foodstore_id %>
        <%=x.user.employee_profile.name %> Ordered on
        <%= x.created_at %> in
        <%=x.foodstore.name %> restaurant
        <%= link_to "Open order", edit_cart_path(x) %>
        <% if x.room %>
            <%= link_to "MessageFromCustomer", x.room %> 
         
        <% end %>
        <%= form_with model: x do |form| %>
            Order status: <%= form.select :order_status, ['Placed', 'Received', 'cooking', 'Finished', 'Delivered'], value: x.order_status%>
              
        
           
            <div>
              <%= form.submit "change status" %>
            </div>
          <% end %><br> <br>

    <% end %>
<% end %>