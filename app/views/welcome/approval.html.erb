<h2 class="text-center" > Users waiting for approvals </h2>

<% @emp_pros.each do |x| %>
  <% if !(x.isapproved) && !(x.isrejected) %>
    <div class="order-list">
      <div class="approve-details">
        <strong> Name: </strong> <%= x.name %> 
        <strong>Role: </strong> <%= x.user.usertype %>
        <strong> Company: </strong> <%= x.company.name %> 
      </div>
      <div>
        <%= form_with model: x do |form| %>
          Approve: <%= form.check_box :isapproved %>    
          Reject: <%= form.check_box :isrejected %> 
          <%= form.submit '  Apply  ' %> 
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

