  <%= form_with(model: @foodcategory) do |f| %>
      <div class="card-body">
    
        <div class="mb-3">
          <%= f.label :name, { class: "form-label"} %>
          <%= f.text_field :name, { class: "form-control", placeholder: "Food category Name" } %>
        </div>

        <div class="mb-3">
        <%= f.label :Image, { class: "form-label"} %><br>
        <%= f.file_field :category_image %>
      </div>
        <%= f.submit "Add foodcategory", class: "btn btn-primary" %>
    
      </div>
    <% end %>