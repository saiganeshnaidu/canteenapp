<h1>Welcome#index</h1>

<% if Current.user %>
    Logged in as: <%= Current.user.usertype %><br><br>
    <%= link_to 'Edit Password', edit_password_path %><br><br>
    <%= button_to 'Logout', logout_path, method: :delete %>
    <% else %>
    <%= link_to 'Sign Up', sign_up_path %>
    or
    <%= link_to 'Login', sign_in_path %>
   <%= link_to 'Log in', '/auth/google_oauth2', method: :post %> <br><br>
   <%= link_to 'Log in with fb', '/auth/facebook', method: :post %>

      <% end %>


<% if employee? %>
    <%= link_to "Go to dashboard", Current.user.employee_profile %>
<% elsif chef? %>
    <%= link_to "Go to dashboard", Current.user.chef_profile %>
<% elsif customer? %>
    <%= link_to "Go to dashboard", Current.user.normal_customer %>
<% end %>

