
<h2 class="text-center">Complete Your profile</h2>
  <%= form_with model: @user, url: registration_path(@user), method: :patch, local: true do |form| %>

    
     <% invalid = check_errors(@user, :usertype) %>
    <div class="form-group">
      <%= form.label :usertype %>
      <%= form.select :usertype, ['Employee', 'Chef', 'Customer'] , class: "form-control #{'is-invalid' if invalid}" %>
      <%= check_valid(@user, :usertype, invalid) %>
    </div>
    <div>
      <%= form.submit 'Confirm' %>
    </div>
  <% end %>
 
