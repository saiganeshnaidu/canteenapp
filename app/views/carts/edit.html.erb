<h2 class="text-center" > Order details </h2>
<h4> <%= @cart.foodstore.name %> </h4>
<table class="table" >
  <thread><th> Item Name </th>
  <th>  Quantity </th>
  <th>  Price </th>
  </thread>
  <tbody>
  <% @cart.cart_lists.each do |x| %>
    <tr> <td> <%= x.fooditem.name %> </td>
    <td> <%= x.quantity %>  </td>
    <td><%= x.quantity * x.fooditem.price %> </td>    
    </tr>
    <% @total+=x.quantity * x.fooditem.price %>
    </tbody>

  <% end %>

</table>
    
<div class="order-details">
  <strong>Grand total:  <%= @total  %> </strong>
  <strong> order status: <%= @cart.order_status %>  </strong> 
</div> <br><br>

<% if admin? %>
  <%= link_to "Back", carts_path %>
<% elsif chef? %>
  <%= link_to "Back", order_path(Current.user.chef_profile) %>
<% end %>


