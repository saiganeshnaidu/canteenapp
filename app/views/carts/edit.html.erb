<h2 class="text-center" > Order details </h2>
<h4> <%= @cart.food_store.name %> <i class="fa-solid fa-cart-shopping"></i> </h4>
<table class="table" >
  <thread>
    <th> Item Name </th>
    <th>  Quantity </th>
    <th>  Price </th>
    <th>  Description </th>
  </thread>
  <tbody>
    <% @cart.cart_items.each do |x| %>
      <tr> 
        <td> <%= x.food_item.name %> </td>
        <td> <%= x.quantity %>  </td>
        <td><%= x.quantity * x.food_item.price %> </td>
        <td><%= x.description if x.description%> </td>       
      </tr>
      <% @total+=x.quantity * x.food_item.price %>
    <% end %>
  </tbody>
</table>
    
<div class="order-details">
  <strong> Grand Total: <i class="fa-sharp fa-solid fa-indian-rupee-sign" style="padding-top:3px;"></i><%= @total %></strong>
  <strong> order status: <%= @cart.order_status %>  </strong> 
</div> <br><br>

<% if admin? %>
  <%= link_to '<i class="fa-solid fa-arrow-left"></i> Back'.html_safe, carts_path, class:"btn btn-primary" %>
<% elsif chef? %>
  <%= link_to '<i class="fa-solid fa-arrow-left"></i> Back'.html_safe, Current.user.chef_profile, class:"btn btn-primary" %>
<% end %>


